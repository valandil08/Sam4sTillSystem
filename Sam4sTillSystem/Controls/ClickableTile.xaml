<UserControl x:Class="Sam4sTillSystem.Controls.ClickableTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sam4sTillSystem.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border x:Name="ClickableTileBorder" Padding="5" CornerRadius="5" Background="{Binding Background}" BorderBrush="Black" BorderThickness="0.6" MouseDown="ControlPressed" TouchDown="ControlPressed" Stylus.IsPressAndHoldEnabled="False" IsEnabled="{Binding IsEnabled}">

            <TextBlock x:Name="ClickableTileText" TextAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" Foreground="black"  FontSize="12">
                £12.99
            </TextBlock>
    </Border>
</UserControl>
